#==============================================================================#
#                                    NAMES                                     #
#==============================================================================#

NAME = libftprintf.a
CC = gcc
CFLAGS = -Werror -Wall -Wextra -g
RM = rm -f
LIBFT = libft.a


#==============================================================================#
#                                    FILES                                     #
#==============================================================================#

SRCS = ft_printf.c \
		ft_putchar.c \
		ft_putstr.c \
		ft_putnbr.c \
		ft_puthex.c \
		ft_putptr.c \


OBJ = $(SRCS:.c=.o)


#==============================================================================#
#                                    RULES                                     #
#==============================================================================#

all: $(NAME)

$(NAME): $(OBJ)
		ar rcs $(NAME) $(OBJ)

clean:
		$(RM) $(OBJ)

fclean: clean
		$(RM) $(NAME)

re: clean all